name: Infrastructure Deploy

on:
  workflow_dispatch:

jobs:
  deploy-infrastructure:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Install OpenShift CLI
        run: |
          wget https://mirror.openshift.com/pub/openshift-v4/clients/ocp/stable/openshift-client-linux.tar.gz
          tar -xzf openshift-client-linux.tar.gz
          sudo mv oc kubectl /usr/local/bin/
          oc version --client

      - name: Login to OpenShift
        env:
          OPENSHIFT_URL: ${{ secrets.OPENSHIFT_URL }}
          OPENSHIFT_TOKEN: ${{ secrets.OPENSHIFT_TOKEN }}
        run: |
          oc login --server=${OPENSHIFT_URL} --token=${OPENSHIFT_TOKEN} --insecure-skip-tls-verify=true

      - name: Set OpenShift Project
        run: oc project vineeta-singh-dev

      - name: Apply infrastructure manifests
        run: |
          oc apply -f openshift/infrastructure/ --namespace=vineeta-singh-dev
